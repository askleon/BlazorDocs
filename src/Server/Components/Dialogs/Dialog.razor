@if(ShowDialog)
{
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

               <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close"
                        @onclick="OnCloseClick">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    @DialogBody
                </div>

               <div class="modal-footer">
                    @DialogFooter
               </div>

            </div>
        </div>
    </div>

    @if(ShowBackdrop)
    {
        <div class="modal-backdrop fade show"></div>
    }
}

@code {
    [Parameter] public RenderFragment DialogBody { get; set; }
    [Parameter] public RenderFragment DialogFooter { get; set; }
    [Parameter] public bool ShowBackdrop { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public EventCallback OnCloseClick { get; set; }

    protected bool ShowDialog { get; set; } = false;

    public virtual void Show()
    {
        ShowDialog = true;
        StateHasChanged();
    }

    public virtual void Close()
    {
        ShowDialog = false;
        StateHasChanged();
    }
}