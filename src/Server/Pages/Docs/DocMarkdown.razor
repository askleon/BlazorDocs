@using Markdig

<div class="card">

    <div class="card-header">
        @Doc.Title
    </div>

    <div class="card-body">
        @((MarkupString) Preview)
    </div>

</div>

@code {
    [Parameter] public DocDto Doc { get; set; }
    private string Preview => Markdown.ToHtml(Doc.Content ?? "");
}